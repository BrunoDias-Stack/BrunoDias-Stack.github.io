                        <tbody>     
                            <% var quantidade = Math.ceil(lgpds.length/20) %>           
                              <% var array =  lgpds.slice(id*20-20,id*20) %>                              
                              <% array.forEach(lgpd => { %>
                                <% if(lgpd.Status == "SIM"){ %>
                            <tr id="valor">
                                <td class="table-success align-middle "><%= lgpd.id %></td>
                                <td class="table-success align-middle "><%= lgpd.Politica %></td>
                                <td class="table-success align-middle "><%= lgpd.DataAt %></td>
                                <td class="table-success align-middle "><%= lgpd.Status %></td>
                                <td class="table-success align-middle "><%= lgpd.Responsável %></td>
                                <td class="table-success align-middle ">
                       <a href="/lgpd/edit/<%= lgpd.id %>">
                                        <i class="fas fa-edit" style="color: black;">Editar</i>
                                      </a>
                                </td>
                            </tr>
                            <%}else{%>
                              <tr id="valor">
                                  <td class="table-warning align-middle "><%= lgpd.id %></td>
                                  <td class="table-warning align-middle "><%= lgpd.Politica %></td>
                                  <td class="table-warning align-middle "><%= lgpd.DataAt %></td>
                                  <td class="table-warning align-middle "><%= lgpd.Status %></td>
                                  <td class="table-warning align-middle "><%= lgpd.Responsável %></td>
                                  <td class="table-warning align-middle ">
                                    <a href="/lgpd/edit/<%= lgpd.id %>">
                                                     <i class="fas fa-edit" style="color: black;">Editar</i>
                                                   </a>
                                             </td>
                              </tr>
                              <% }})%>
